// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ORG
  USER
}

enum Age {
  CUB
  YOUNG
  ADULT
}

enum Size {
  SMALL
  MEDIUM
  LARGE
  GIANT
}

enum Energy {
  LOW
  MEDIUM
  HIGH
}

enum Independence {
  LOW
  MEDIUM
  HIGH
}

enum Environment {
  BROAD
  CLOSED
  REDUCED
}

model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password_hash   String
  role            Role     @default(ORG)
  created_at      DateTime @default(now())
  whatsapp_number String
  Address         Address?
  Pet             Pet[]

  @@map("users")
}

model Address {
  id          String @id @default(uuid())
  street      String
  city        String
  state       String
  postal_code String
  user_id     String @unique
  user        User   @relation(fields: [user_id], references: [id])

  @@map("adresses")
}

model Pet {
  id                 String       @id @default(uuid())
  name               String
  about              String?
  age_range          Age
  size               Size
  energy             Energy
  independence_level Independence
  environment        Environment
  requirements       String?
  user               User         @relation(fields: [user_id], references: [id])
  user_id            String
  created_at         DateTime     @default(now())

  @@map("pets")
}
